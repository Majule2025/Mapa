<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="utf-8" />
  <title>Moje interaktivní mapa</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Leaflet CSS -->
  https://unpkg.com/leaflet@1.9.4/dist/leaflet.css
  <style>
    html, body { height: 100%; margin: 0; }
    #map { height: 100vh; }
    .legend {
      background: white; padding: 8px 10px; line-height: 1.4; border-radius: 4px;
      box-shadow: 0 0 8px rgba(0,0,0,.15); font: 14px/1.4 system-ui, Segoe UI, Arial, sans-serif;
    }
  </style>
</head>
<body>
  <div id="map"></div>

  <!-- Leaflet JS -->
  https://unpkg.com/leaflet@1.9.4/dist/leaflet.js</script>

  <script>
    // 1) Inicializace mapy
    const map = L.map('map').setView([49.8, 15.5], 7); // ČR

    // 2) Podkladová vrstva (OpenStreetMap)
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: '&copy; OpenStreetMap přispěvatelé'
    }).addTo(map);

    // 3) Ukázkový GeoJSON (bod + popup)
    const mojeData = {
      "type": "FeatureCollection",
      "features": [
        {
          "type": "Feature",
          "properties": { "název": "Moje místo", "poznámka": "Klikni pro detail" },
          "geometry": { "type": "Point", "coordinates": [14.914, 50.411] } // Mladá Boleslav
        }
      ]
    };

    function onEachFeature(feature, layer) {
      if (feature.properties) {
        const { název, poznámka } = feature.properties;
        layer.bindPopup(`<strong>${název ?? ''}</strong><br>${poznámka ?? ''}`);
      }
    }

    L.geoJSON(mojeData, {
      pointToLayer: (feature, latlng) => L.circleMarker(latlng, {
        radius: 8, fillColor: '#0078d4', color: '#004a8f', weight: 2, opacity: 1, fillOpacity: 0.8
      }),
      onEachFeature
    }).addTo(map);

    // 4) Jednoduchá legenda
    const legend = L.control({position: 'bottomright'});
    legend.onAdd = function() {
      const div = L.DomUtil.create('div', 'legend');
      div.innerHTML = '<b>Legenda</b><br><span style="color:#0078d4">●</span> Můj bod';
      return div;
    };
    legend.addTo(map);
  </script>
</body>
</html>
